{% extends 'base.html.twig' %}

{% block title %}Liste des Championnats{% endblock %}

{% block body %}
    <h1>Liste des Championnats</h1>

    <div class="mb-3">
        <a href="{{ path('app_championnats_new') }}" class="btn btn-success">Créer un championnat</a>
    </div>

    <form method="get" class="mb-3">
        <label for="sportFilter" class="form-label">Filtrer par sport</label>
        <select id="sportFilter" name="sport" class="form-select" onchange="this.form.submit()">
            <option value="">Tous les sports</option>
            {% for sport in sports %}
                <option value="{{ sport.id }}" {% if app.request.get('sport') == sport.id %}selected{% endif %}>{{ sport.nom }}</option>
            {% endfor %}
        </select>
    </form>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Nom du championnat</th>
            <th>Sport</th>
            <th>Compétitions / Épreuves</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for championnat in championnats %}
            <tr>
                <td>{{ championnat.nom }}</td>
                <td>{{ championnat.sport.nom }}</td>
                <td>
                    <ul>
                        {% for competition in championnat.competitions %}
                            <li>
                                {{ competition.nom }}
                                <ul>
                                    {% for epreuve in competition.epreuves %}
                                        <li>{{ epreuve.nom }}</li>
                                    {% endfor %}
                                </ul>
                            </li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    <a href="{{ path('app_championnats_show', {id: championnat.id}) }}" class="btn btn-primary btn-sm">Voir</a>
                    <a href="{{ path('app_championnats_edit', {id: championnat.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    <form method="post" action="{{ path('app_championnats_delete', {id: championnat.id}) }}" style="display:inline-block;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ championnat.id) }}">
                        <button class="btn btn-danger btn-sm">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
